@model BackEnd.Models.CrearEventoViewModel
@{
    ViewData["Title"] = "CrearEvento";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CrearEvento.css" asp-append-version="true"/>
}

<main>
        <section class="crear-evento-section">
            <h1>Crear Nuevo Evento</h1>
