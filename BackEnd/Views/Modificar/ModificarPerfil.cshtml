@model BackEnd.Models.ModificarViewModel;
@{
    var fotoPath = "/Imagenes/" + (Model.estudiante.ImageUrl ?? "default.jpg");
    
}

@section Styles {
    <link rel="stylesheet" href="~/css/ModificarPerfil.css" asp-append-version="true" />
}
<main>
  <section class="modificar-card">
    <img class="modificar-imagen" src="@fotoPath">
    <form asp-action="GuardarCambios" asp-controller="Modificar" method="post" class="informacion-modificar">
        <div class="contenedor-informacion">
                <p class="Nombre">Nombre:</p>
                <input type="text" name="estudiante.Nombre" class="Nombre-input" value="@Model.estudiante.Nombre">
